<UserControl x:Class="DesktopReload.Controls.LabelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopReload.Controls"
             
             mc:Ignorable="d" Width="250.179" Height="50">

    
    <Grid  Background="#4CFF0000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding LabelText}" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <Label Content="{Binding ValueText}" HorizontalAlignment="Right"  VerticalAlignment="Top"/>

    </Grid>
</UserControl>
